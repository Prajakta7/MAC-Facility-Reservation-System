<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScrollingActivity1"
    tools:showIn="@layout/activity_view_specific_reservation">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Start date :  "
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/startdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="startdate"
            android:visibility="gone"
            android:textSize="24sp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Start Time :  "
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="starttime"
            android:visibility="gone"
            android:textSize="24sp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lay3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="End time:  "
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="endtime"
            android:visibility="gone"
            android:textSize="24sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lay4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay3"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/view4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Facility Type:  "
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/facilitytype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="facilitytype"
            android:visibility="gone"
            android:textSize="24sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lay5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay4"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/view5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Facility Name:  "
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/facilityname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="facilitytype"
            android:visibility="gone"
            android:textSize="24sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lay6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay5"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/view6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Reservation Number:  "
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/resname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="resname"
            android:visibility="gone"
            android:textSize="24sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lay7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay6"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/view7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Deposit amount:  "
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="amount"
            android:visibility="gone"
            android:textSize="24sp"
            />
    </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>